<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_lv_item"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/dlg_add_book_et_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:gravity="center_vertical"
        android:paddingLeft="5dp" />

    <View
        android:layout_width="200dp"
        android:layout_height="0.5dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/black" />

    <EditText
        android:id="@+id/dlg_add_book_et_page"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:gravity="center_vertical"
        android:inputType="number"
        android:paddingLeft="5dp" />

    <View
        android:layout_width="200dp"
        android:layout_height="0.5dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/dlg_add_book_btn_sub"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_black_btn"
            android:src="@android:drawable/ic_media_previous" />

        <ImageButton
            android:id="@+id/dlg_add_book_btn_add"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_black_btn"
            android:src="@android:drawable/ic_media_next" />

        <ImageButton
            android:id="@+id/dlg_add_book_btn_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_black_stroke_btn"
            android:padding="5dp"
            android:src="@android:drawable/star_on" />
    </RelativeLayout>

</LinearLayout>